{
  "name": "scrollreveal",
  "version": "3.3.2",
  "description": "Easy scroll animations for web and mobile browsers.",
  "homepage": "https://scrollrevealjs.org",
  "main": "dist/scrollreveal.js",
  "scripts": {
    "prebuild": "rm -rf dist/*",
    "build": "npm run bundle && npm run bundle:min",
    "bundle": "./node_modules/rollup/bin/rollup -c rollup.conf.js",
    "bundle:min": "./node_modules/rollup/bin/rollup -c rollup.conf.min.js",
    "pretest": "rm -rf .ignore/coverage/* && npm run lint",
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "testing": "npm test -- --no-single-run",
    "codecov": "cat coverage/*/lcov.info | ./node_modules/codecov/bin/codecov",
    "lint": "./node_modules/eslint/bin/eslint.js src test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jlmakes/scrollreveal.git"
  },
  "bugs": {
    "url": "https://github.com/jlmakes/scrollreveal/issues"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.11.0",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-rollup-preprocessor": "^3.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sinon-chai": "^1.2.4",
    "mocha": "^3.1.2",
    "rollup": "^0.x",
    "rollup-plugin-buble": "^0.x",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0"
  },
  "author": "Julian Lloyd",
  "license": "GPL-3.0"
}
